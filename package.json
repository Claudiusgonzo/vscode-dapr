{
	"name": "vscode-dapr",
	"displayName": "vscode-dapr",
	"description": "A VS Code extension for users of Dapr.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onCommand:workbench.action.tasks.runTask"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		],
		"taskDefinitions": [
			{
				"type": "dapr",
				"properties": {
					"appId": {
						"type": "string",
						"description": ""
					},
					"appPort": {
						"type": "integer",
						"description": "",
						"default": -1
					},
					"command": {
						"type": "array",
						"description": "",
						"additionalItems": {
							"type": "string"
						}
					},
					"cwd": {
						"type": "string",
						"description": ""
					},
					"config": {
						"type": "string",
						"description": ""
					},
					"enableProfiling": {
						"type": "boolean",
						"description": "",
						"default": false
					},
					"grpcPort": {
						"type": "integer",
						"description": "",
						"default": -1
					},
					"httpPort": {
						"type": "integer",
						"description": "",
						"default": -1
					},
					"image": {
						"type": "string",
						"description": ""
					},
					"logLevel": {
						"type": "string",
						"description": "",
						"enum": [
							"debug",
							"info",
							"warning",
							"error",
							"fatal",
							"panic"
						],
						"default": "info"
					},
					"maxConcurrency": {
						"type": "integer",
						"description": ""
					},
					"placmentHost": {
						"type": "string",
						"description": "",
						"default": "localhost"
					},
					"profilePort": {
						"type": "integer",
						"description": "",
						"default": -1
					},
					"protocol": {
						"type": "string",
						"description": "",
						"enum": [
							"http",
							"grpc"
						],
						"default": "http"
					},
					"redisHost": {
						"type": "string",
						"description": "",
						"default": "localhost"
					}
				},
				"required": ["command"]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
